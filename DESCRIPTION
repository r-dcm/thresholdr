Package: thresholdr
Title: Estimate Optimal Probability Classification Thresholds for Diagnostic Models
Version: 0.0.0.9000
Authors@R: c(
    person("W. Jake", "Thompson", , "wjakethompson@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0001-7339-0300")),
